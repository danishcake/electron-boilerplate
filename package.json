    "@types/react-dom": "^17.0.7",
    "@types/webpack": "^5.28.0",
    "@types/webpack-dev-server": "^3.11.4",
    "@types/webpack-env": "^1.16.0",
    "electron-devtools-installer": "^3.2.0",
    "express": "^4.17.1",
    "ifdef-loader": "^2.3.0",
    "react-hot-loader": "^4.13.0",
    "shx": "^0.3.3",
    "ts-loader": "<=8.2.0",
    "type-fest": "^1.2.0",
    "typescript": "^4.3.2",
